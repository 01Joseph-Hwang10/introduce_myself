{
    "compilerOptions": {
        "module": "esnext",
        "lib": [
            "es2021",
            "DOM"
        ],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "src/*"
            ],
            "@res/*": [
                "res/*"
            ]
        },
        "allowJs": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}